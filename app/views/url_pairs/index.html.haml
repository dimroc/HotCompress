%h1 UrlPairs

="URL Pair Count: #{UrlPair.count}"
%table
	%tr
		%th= "Long URL "
		%th= "Short URL" 
	-	@url_pairs.each do |url_pair|
		%tr
			%td= url_pair.long_url
			%td= url_pair.short_url
			%td= link_to 'Show', url_pair_path(url_pair)
			%td= link_to 'Edit', edit_url_pair_path(url_pair)
			%td= link_to 'Destroy', url_pair, :confirm => "Are you sure?", :method => :delete
%br			
= link_to "New Url Pair", new_url_pair_path